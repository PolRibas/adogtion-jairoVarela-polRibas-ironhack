<section>

    <form action="/app/changePhoto" method="POST" enctype="multipart/form-data">
        <label for="image">
            <input onchange="this.form.submit()" type="file" name="image" id="image" style="display:none;"/>
            <img src="{{image}}" width="200px"/>
         </label>
    </form>
    <h2>{{username}}</h2>
    <h3>{{name}}</h3>
    <p>Email: {{email}}</p>
    <p>Phone: {{phone}}</p>
    <p>Webside: {{website}}</p>
    <p>address: {{address}}</p>
    {{>pencil}}
    <form action="/app/profile/update" method="POST">
        <label>Username:
            <input type="text" name="username" id="username" disabled value="{{username}}" >
        </label>
        <label>Shelter Name:
            <input type="text" name="name" id="name" placeholder="first Name" value="{{name}}">
        </label>
        <label>Phone:
            <input type="Number" name="phone" id="phone" placeholder="phone" value="{{phone}}">
        </label>
        <label>Email:
            <input type="text" name="email" id="email" placeholder="email" value="{{email}}">
        </label>
        <label>Webside:
            <input type="text" name="website" id="website" placeholder="website" value="{{website}}">
        </label>
        <label>City:
            <input type="text" name="address" id="address" placeholder="address" value="{{address}}">
        </label>
        <button type="submit">Update</button>
    </form>

    <form action="/app/profile/delete" method="POST">
        <button type="submit">Delete profile</button>
    </form>

{{>navShelter}}