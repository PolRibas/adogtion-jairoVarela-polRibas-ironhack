{{>navUser}}
<h1 class="uk-heading">Notifications</h1>
{{#if userNotes.notes}}
{{#each userNotes.notes}}
<article class="uk-comment dog-notes">
    <header class="uk-comment-header uk-grid-medium uk-flex-middle" uk-grid>
        <div class="uk-width-auto">
            <img class="uk-comment-avatar" src="{{idDog.image}}" width="80" height="80" alt="">
        </div>
        <div class="uk-width-expand">

            <h4 class="uk-comment-title uk-margin-remove"><a class="uk-link-reset" href="#">{{idDog.shelter.username}}</a></h4>
        </div>
    </header>
    <form class="delete-btn" action="/api/message/{{_id}}/delete">
        <button class="submit uk-button" type="submit">Delete</button>
    </form>
    <a class="uk-button" href="/app/notifications/{{_id}}">CHAT</a>
</article>
{{/each}}
{{else}}
<div class="no-items">
<h3>You don't have any notifications</h3>
</div>
{{/if}}
<script src="/javascripts/users/notes.js"></script>
