{{>navUser}}
{{#if userNotes.notes}}
{{#each userNotes.notes}}
<article class="uk-comment notifications">
    <header class="uk-comment-header uk-grid-medium uk-flex-middle" uk-grid>
        <div class="uk-width-auto">
            <img class="uk-comment-avatar" src="{{idDog.image}}" width="80" height="80" alt="">
        </div>
        <div class="uk-width-expand">
            <h4 class="uk-comment-title uk-margin-remove"><a class="uk-link-reset" href="#">{{idDog.shelter.username}}</a></h4>
            <ul class="uk-comment-meta uk-subnav uk-subnav-divider uk-margin-remove-top">
                <li><a href="#">12 days ago</a></li>
                <li><a href="#">Reply</a></li>
            </ul>
        </div>
    </header>
     {{#each message}}
    <div class="uk-comment-body">
        <p>{{this}}</p>
    </div>
    {{/each}}
    {{#if message.[1]}}
        {{#if message.[2]}}
        {{else}}
            <form class="chat-form" action="/api/message/{{_id}}">
                <input id="information" type="text" name="information" placeholder="Write your message" />
                <button class="submit uk-button" type="submit">Send</button>
            </form>
        {{/if}}
    {{/if}}
    <form class="delete-btn" action="/api/message/{{_id}}/delete">
        <button class="submit uk-button" type="submit">Delete</button>
    </form>
</article>
{{/each}}
{{else}}
<h2>You don't have any notifications yet</h2>
{{/if}}
<script src="/javascripts/users/notes.js"></script>
