<!-- This is the Login Modal -->
<button class="uk-button uk-button-default" uk-toggle="target: #login" type="button">Login</button>

<div id="login" uk-modal>
    <div class="uk-modal-dialog uk-margin-auto-vertical uk-modal-body">
        <h2 class="uk-modal-title">Login</h2>
        <form class="uk-form-stacked" action="/auth/login" method="POST" class="login">
        <div class="uk-margin">
        <label class="uk-form-label" for="form-stacked-text">Username:</label>
        <div class="uk-form-controls">
            <input class="uk-input" type="text" name="username" id="username" required placeholder="Username" autofocus>
        </div>
        </div>
        <div class="uk-margin">
        <label class="uk-form-label" for="form-stacked-text">Password:</label>
        <div class="uk-form-controls">
            <input class="uk-input" type="password" name="password" id="password" required placeholder="Password">
        </div>
        </div>
        <button class="uk-button uk-button-default" type="submit">Login</button>
    </form>
        <button class="uk-modal-close-default" type="button" uk-close></button>
    </div>
</div>